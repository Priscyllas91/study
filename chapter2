#USING VARIBLES AS STRINGS 

  first_name = "Vito"

  last_name="Corleone"
  
  #f function is used to contatenate string variables 
  
  full_name=f"{first_name} {last_name}" #{} used most on string variables
  
  print(full_name)

  print(f"Godfather {full_name.title()}")

  message= f"Godfather {full_name.title()}"

  print(message)

